icon-play             = %{T3}%{T-}
icon-play-foreground  = ${colors.arc_foreground}
icon-play-background  = ${colors.arc_background_2}
icon-pause            = %{T3}%{T-}
icon-pause-foreground = ${colors.arc_foreground}
icon-pause-background = ${colors.arc_background_2}
icon-prev             = " %{T3}%{T-} "
icon-prev-foreground  = ${colors.arc_foreground}
icon-prev-background  = ${colors.arc_background_2}
icon-next             = " %{T3}%{T-} "
icon-next-foreground  = ${colors.arc_foreground}
icon-next-background  = ${colors.arc_background_2}

format-playing-suffix            = %{T4}%{T-}
format-playing-suffix-foreground = ${colors.arc_blue}
format-playing-suffix-background = ${colors.arc_background_2}
format-paused-suffix             = %{T4}%{T-}
