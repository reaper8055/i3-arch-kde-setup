label-song-ellipsis   = true
label-song            = " %artist% - %title% "
label-song-foreground = ${colors.custom_foreground}
label-song-background = ${colors.custom_background_dark}

format-playing-prefix            = %{T3}%{T-}
format-playing-prefix-foreground = ${colors.custom_background_dark}
format-playing-prefix-background = ${colors.custom_primary}
format-playing-suffix            = %{T3}%{T-}
format-playing-suffix-foreground = ${colors.custom_background_light}
format-playing-suffix-background = ${colors.custom_background_dark}
format-paused-prefix             = %{T3}%{T-}
format-paused-prefix-foreground  = ${colors.custom_background_dark}
format-paused-prefix-background  = ${colors.custom_primary}
format-paused-suffix             = %{T3}%{T-}
format-paused-suffix-foreground  = ${colors.custom_background_light}
format-paused-suffix-background  = ${colors.custom_background_dark}
format-stopped-prefix            = %{T3}%{T-}
format-stopped-prefix-foreground = ${colors.custom_background_dark}
