[colors]
custom_foreground 	    = ${xrdb:custom_foreground}
custom_background_dark 	= ${xrdb:custom_background_dark}
custom_background_light = ${xrdb:custom_background_light}
custom_primary    	 	= ${xrdb:custom_primary}
custom_warn    	 		= ${xrdb:custom_warn}

[bar/top]
monitor      = ${env:MONITOR}
height       = 16
fixed-center = true
bottom       = false

background = ${colors.custom_background_dark}
foreground = ${colors.custom_foreground}

border-bottom-size  = 1
border-color 		= ${colors.custom_background_dark}

font-0 = Iosevka Term:fontformat=truetype:pixelsize=8:antialias=true;2
font-1 = Iosevka Nerd Font Mono:fontformat=truetype:size=14:antialias=true;3
font-2 = Iosevka Term::fontformat=truetype:pixelsize=9:antialias=true;2
font-3 = Material Icons:fontformat=truetype:size=9:antialias=true;3

modules-left   = left_start_indicator left_end_indicator i3 i3_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd mpd_controls battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 eth_2 volume date time

[bar/top_tray]
monitor      = ${env:MONITOR}
height       = 16
fixed-center = true
bottom       = false

background = ${colors.custom_background_dark}
foreground = ${colors.custom_foreground}

border-bottom-size  = 1
border-color 		= ${colors.custom_background_dark}

font-0 = Iosevka Term:fontformat=truetype:pixelsize=8:antialias=true;2
font-1 = Iosevka Nerd Font Mono:fontformat=truetype:size=12:antialias=true;3
font-2 = Iosevka Term::fontformat=truetype:pixelsize=9:antialias=true;2
font-3 = Material Icons:fontformat=truetype:size=9:antialias=true;3

modules-left   = left_start_indicator left_end_indicator i3 i3_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd mpd_controls battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 eth_2 volume date time

tray-position    = right
tray-detached    = false
tray-maxsize     = 12
tray-transparent = false
tray-background  = ${colors.custom_primary}
tray-offset-x    = 0
tray-offset-y    = 0
tray-padding     = 0
tray-scale       = 1.0

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   = "%{B#1ABC9C F#31363b}%{T3}%{T-}%{F-B-} %name% %{B#31363b F#1ABC9C}%{T3}%{T-}%{F-B-}"
label-focused-foreground   = ${colors.custom_background_dark}
label-focused-background   = ${colors.custom_primary}
label-unfocused 		   = "%{T3} %{T-} %name% %{T3} %{T-}"
label-unfocused-foreground = ${colors.custom_foreground}
label-unfocused-background = ${colors.custom_background_dark}
label-visible 			   = "%{B#706f6f F#31363b}%{T3}%{T-}%{F-B-} %name% %{B#31363b F#706f6f}%{T3}%{T-}%{F-B-}"
label-visible-foreground   = ${colors.custom_background_dark}
label-visible-background   = ${colors.custom_primary}
label-urgent 			   = "%{B#E74C3C F#31363b}%{T3}%{T-}%{F-B-} %name% %{B#31363b F#E74C3C}%{T3}%{T-}%{F-B-}"
label-urgent-foreground    = ${colors.custom_background_dark}
label-urgent-background    = ${colors.custom_warn}

