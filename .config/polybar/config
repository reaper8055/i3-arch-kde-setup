[colors]
foreground  = ${xrdb:foreground}
background  = ${xrdb:background}
transparent = #00000000

black 	= ${xrdb:color0}
red     = ${xrdb:color1}
green   = ${xrdb:color2}
yellow  = ${xrdb:color3}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan    = ${xrdb:color6}
white   = ${xrdb:color7}

bblack 	= ${xrdb:color8}
bred     = ${xrdb:color9}
bgreen   = ${xrdb:color10}
byellow  = ${xrdb:color11}
bblue    = ${xrdb:color12}
bmagenta = ${xrdb:color13}
bcyan    = ${xrdb:color14}
bwhite   = ${xrdb:color15}

[bar/top]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size    = 10
border-bottom-size = 0
border-left-size   = 10
border-right-size  = 10
border-color = ${colors.transparent}

font-0 = xos4 Terminess Powerline:size=8;2
font-1 = Font Awesome:size=7;2
font-2 = Wuncon Siji:size=8;2

modules-left   = i3_start_indicator i3 i3_end_indicator active_working_space_indicator title title_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 volume date time

[bar/top_tray]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size    = 10
border-bottom-size = 0
border-left-size   = 10
border-right-size  = 10
border-color = ${colors.transparent}

font-0 = xos4 Terminess Powerline:size=8;2
font-1 = Font Awesome:size=7;2
font-2 = Wuncon Siji:size=8;2

modules-left   = i3_start_indicator i3 i3_end_indicator active_working_space_indicator title title_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 volume date time

tray-position    = right
tray-detached    = false
tray-maxsize     = 14
tray-transparent = false
tray-background  = ${colors.bgreen}
tray-offset-x    = 0
tray-offset-y    = 0
tray-padding     = 1
tray-scale       = 1.0

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   = %{B#8C9440 F#B5BD68}%{F-B-} %name% %{B#B5BD68 F#8C9440}%{F-B-}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.green}
label-unfocused 		   = %{B#373B41 F#B5BD68}%{F-B-} %name% %{B#B5BD68 F#373B41}%{F-B-}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.black}
label-visible 			   = %{B#B5BD68 F#B5BD68}%{F-B-} %name% %{B#B5BD68 F#B5BD68}%{F-B-}
label-visible-foreground   = ${colors.background}
label-visible-background   = ${colors.bgreen}
label-urgent 			   = %{B#A54242 F#B5BD68}%{F-B-} %name% %{B#B5BD68 F#A54242}%{F-B-}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

[module/i3_start_indicator]
type = custom/text

content            = " %{T3}%{T-} "
content-foreground = ${colors.background}
content-background = ${colors.bgreen}

[module/i3_end_indicator]
type = custom/text

content            = 
content-foreground = ${colors.bgreen}
content-background = ${colors.bblack}

[module/active_working_space_indicator]
