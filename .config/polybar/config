[module/mpd_controls]
type = internal/mpd

format-playing = <icon-prev><toggle><icon-next>
format-paused  = <icon-prev><toggle><icon-next>
format-stopped = <icon-prev><toggle><icon-next>

icon-play             = %{T4}%{T-}
icon-play-foreground  = ${colors.custom_foreground}
icon-play-background  = ${colors.custom_background_light}
icon-pause            = %{T4}%{T-}
icon-pause-foreground = ${colors.custom_foreground}
icon-pause-background = ${colors.custom_background_light}
icon-prev             = " %{T4}%{T-}"
icon-prev-foreground  = ${colors.custom_foreground}
icon-prev-background  = ${colors.custom_background_light}
icon-next             = "%{T4}%{T-} "
icon-next-foreground  = ${colors.custom_foreground}
icon-next-background  = ${colors.custom_background_light}

format-playing-suffix            = %{T3}%{T-}
format-playing-suffix-foreground = ${colors.custom_primary}
format-playing-suffix-background = ${colors.custom_background_light}
format-paused-suffix             = %{T3}%{T-}
format-paused-suffix-foreground  = ${colors.custom_primary}
format-paused-suffix-background  = ${colors.custom_background_light}
format-stopped-suffix            = %{T3}%{T-}
format-stopped-suffix-foreground = ${colors.custom_primary}
format-stopped-suffix-background = ${colors.custom_background_light}

