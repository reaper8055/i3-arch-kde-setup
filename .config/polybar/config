[colors]
background  = ${xrdb:background}
foreground  = ${xrdb:foreground}
red    	    = ${xrdb:color1}
green       = ${xrdb:color2}
yellow      = ${xrdb:color3}
transparent = #00000000

arc_foreground 	 = ${xrdb:arc_foreground}
arc_background_0 = ${xrdb:arc_background_0}
arc_background_1 = ${xrdb:arc_background_1}
arc_background_2 = ${xrdb:arc_background_2}
arc_blue    	 = ${xrdb:arc_blue}

[bar/top]
monitor      = ${env:MONITOR}
height       = 20
fixed-center = true
bottom       = false

background = ${colors.arc_background_0}
foreground = ${colors.arc_foreground}

border-top-size    = 4
border-bottom-size = 0
border-left-size   = 15
border-right-size  = 15
border-color = ${colors.transparent}

font-0 = Iosevka Term:size=9;3
font-1 = Font Awesome:size=9;2
font-2 = Font Awesome:size=8;2
font-3 = Iosevka Term:size=12;2

modules-left   = left_start_indicator left_end_indicator i3 i3_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd mpd_controls battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 volume date time

[bar/top_tray]
monitor      = ${env:MONITOR}
height       = 20
fixed-center = true
bottom       = false

background = ${colors.arc_background_0}
foreground = ${colors.arc_foreground}

border-top-size    = 4
border-bottom-size = 0
border-left-size   = 15
border-right-size  = 15
border-color = ${colors.transparent}

font-0 = Iosevka Term:size=9;3
font-1 = Font Awesome:size=9;2
font-2 = Font Awesome:size=8;2
font-3 = Iosevka Term:size=12;2

modules-left   = left_start_indicator left_end_indicator i3 i3_end_indicator
modules-center = 
modules-right  = mpd_end_indicator mpd mpd_controls battery memory cpu temperature wlan_0 wlan_1 eth_0 eth_1 volume date time

tray-position    = right
tray-detached    = false
tray-maxsize     = 14
tray-transparent = false
tray-background  = ${colors.arc_blue}
tray-offset-x    = 0
tray-offset-y    = 0
tray-padding     = 3
tray-scale       = 1.0

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   = "%{B#5294E2 F#303651}%{T4}%{T-}%{F-B-} %name% %{B#303651 F#5294E2}%{T4}%{T-}%{F-B-}"
label-focused-foreground   = ${colors.arc_background_0}
label-focused-background   = ${colors.arc_blue}
label-unfocused 		   = "%{T4} %{T-} %name% %{T4} %{T-}"
label-unfocused-foreground = ${colors.arc_foreground}
label-unfocused-background = ${colors.arc_background_1}
label-visible 			   = "%{B#4A5664 F#303651}%{T4}%{T-}%{F-B-} %name% %{B#303651 F#4A5664}%{T4}%{T-}%{F-B-}"
label-visible-foreground   = ${colors.arc_background_0}
label-visible-background   = ${colors.arc_blue}
label-urgent 			   = "%{B#ff000f F#303651}%{T4}%{T-}%{F-B-} %name% %{B#303651 F#ff000f}%{T4}%{T-}%{F-B-}"
label-urgent-foreground    = ${colors.arc_background_0}
label-urgent-background    = ${colors.red}

